include mixins
doctype
html( lang="en" )
    include head
    body(style="padding-bottom:10rem;")
    include nav
    div.container-fluid
        div.content-wrapper
            div.item-container
                div.container
                    div.col-md-12
                        each recipeItem, i in recipe
                            div.product.col-md-6.service-image-left
                                center
                                    +productImage(recipeItem.Title)
                                div
                               
                             div.col-md-4
                                div.product-title=recipeItem.Title
                                hr
                                div.product-title Ingredients
                                br
                                div.product-desc 
                                    - recipeList = recipeItem.Ingredients
                                    - recipeList = recipeList.replace(/;/g, '<br>')
                                    - recipeInstructions = recipeItem.Instructions
                                    - recipeInstructions = recipeInstructions.replace(/\n \n/g, '<br>')
                                    p!= recipeList
                                div.product-rating 
                                    +ratings(recipeItem.Ratings_alt)

                                    hr
                                    div.btn-group.Wishlist
                                        button.btn.btn-success Add to Wishlist
                            div.col-md-2
                                div
                                    p Prep time: #{recipeItem.Time}
                                    p Serves: #{recipeItem.Serves}
                                    p Difficulty: #{recipeItem.Difficulty}


                div.container-fluid
                    div.ol-md-12.product-info
                        ul#myTab.nav.nav-tabs.nav_tabs
                            li.active
                                a(href="#service-one" data-toggle="tab") INSTRUCTIONS
                            li
                                a(href="#service-two" data-toggle="tab") NUTRITIONAL INFO
                            li
                                a(href="#service-three" data-toggle="tab") REVIEWS
                        div#myTabContent.tab-content
                            div#service-one.tab-pane.fade.in.active
                                section.container.product-info
                                    span!= recipeInstructions
                            div#service-two.tab-pane.fade
                                section.container
                                    span!= details
                            div#service-three.tab-pane.fade
                                section.container
                        hr
include footer
