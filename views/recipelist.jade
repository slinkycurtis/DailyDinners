                        a(href="/recipelist?page=4") 4
                - else
                    li
                        a(href="/recipelist?page=4") 4
                - if(pageview==5)
                    li.page-item.active
                        a(href="/recipelist?page=5") 5
                - else
                    li
                        a(href="/recipelist?page=5") 5
                - if(pageview==5)
                    li.disabled
                        a(href="#") &raquo;
                - else
                    li
                        a(href="/recipelist?page=#{pageview +1}") &raquo;
        table.table.table-striped
            thead
                tr
                    th Image
                    th Title
                    th Type
                    th Difficulty
                    th Diet
                    th Time
            tbody
                each recipe, i in recipelist
                    tr
                        td
                            img(src="./images/thumbs/#{recipe.Image}.jpg").img-rounded.img-responsive
                        td
                            a(href="http://www.dailydinners.co.uk/#{recipe.RecipeID}.html")= recipe.Title
                        td= recipe.Type 
                        td= recipe.Difficulty
                        td= recipe.Diets
                        td= recipe.Time
