include mixins
doctype
html( lang="en" )
    include head
    body(style="padding-bottom:10rem;")
    include nav
    .container
      block content
        .jumbotron
            h1 Recipe List
            p Here you can find some of the best recipes available today, easilly categorised based on diet, time and difficulty

        div.text-center
            ul.pagination.pagination-lg
                - if(pageview==1) 
                    li.disabled
                        a(href="#") &laquo;
                - else
                    li
                        a(href="/recipelist?page=#{pageview -1}") &laquo;
                - if(pageview==1)
                    li.page-item.active 
                        a(href="/recipelist?page=1") 1
                - else
                    li
                        a(href="/recipelist?page=1") 1
                - if(pageview==2)
                    li.page-item.active
                        a(href="/recipelist?page=2") 2
                - else
                    li
                        a(href="/recipelist?page=2") 2
                - if(pageview==3)
                    li.page-item.active
                        a(href="/recipelist?page=3") 3
                - else
                    li
                        a(href="/recipelist?page=3") 3
                - if(pageview==4)
